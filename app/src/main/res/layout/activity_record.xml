<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RecordActivity">
    <include layout="@layout/activity_toolbar_base" />
    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_gray_color2"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@id/ll_content"
        >
        <android.support.v7.widget.SearchView
            android:id="@+id/sv_record"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginBottom="@dimen/dimen_6dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/selector_edit_frame"
            app:iconifiedByDefault="false"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:queryHint="@string/input_tip"
            />
    </android.support.design.widget.AppBarLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        style="@style/MyTablayoutstyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/abl_currency"
        />
    <com.bankledger.safegem.ui.view.NoPreloadViewPager
        android:id="@+id/viewPager"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        style="@style/Horizontal_center_style"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>