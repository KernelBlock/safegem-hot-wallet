<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.LoginRegGuideActivity"
    android:background="@drawable/login_bg"
    >
    <Button
        android:id="@+id/login_btn"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:text="@string/login_str"
        android:textColor="@color/login_blue_text"
        android:background="@drawable/white_bg_corner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="@dimen/dimen_64dp"
        app:layout_constraintBottom_toTopOf="@id/register_btn"
        android:layout_marginBottom="@dimen/dimen_30dp"
        />
    <Button
        android:id="@+id/register_btn"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:text="@string/register_str"
        android:textColor="@color/white"
        android:background="@drawable/border_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/dimen_64dp"
        android:layout_marginBottom="@dimen/grid_item_h"
        />
</android.support.constraint.ConstraintLayout>