<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_color"
    tools:context=".ui.activity.IndividualCenterActivity">

    <include layout="@layout/activity_toolbar_base"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/user_head_img"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@id/ll_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/header_str"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dimen_20dp"
            />

        <ImageView
            android:id="@+id/header_img"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:src="@drawable/head_img"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/dimen_10dp"
            />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/nick_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/user_head_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/nick_str"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dimen_20dp"
            />

        <TextView
            android:id="@+id/nick_tv"
            style="@style/StyleWrapeSize"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:text="科比布莱恩特"
            android:textColor="@color/black"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/update_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/nick_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/id_str"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dimen_20dp"
            />

        <TextView
            android:id="@+id/id_tv"
            style="@style/StyleWrapeSize"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:text="10086"
            android:textColor="@color/black"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/phone_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/update_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/phone_str"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dimen_20dp"
            />

        <TextView
            android:id="@+id/phone"
            style="@style/StyleWrapeSize"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:text="10086"
            android:textColor="@color/black"
            />
    </android.support.constraint.ConstraintLayout>
    <Button
        android:id="@+id/exit_btn"
        android:text="@string/exit_login"
        app:layout_constraintTop_toBottomOf="@id/phone_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_40dp"
        style="@style/Button_bg_style"
        />
</android.support.constraint.ConstraintLayout>