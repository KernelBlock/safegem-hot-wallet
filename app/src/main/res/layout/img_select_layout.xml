<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/white_bg_corner"
        android:layout_marginHorizontal="@dimen/dimen_6dp"
        android:layout_marginBottom="@dimen/dimen_6dp"
        >
        <TextView
            android:id="@+id/tv1"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_40dp"
            android:text="@string/takecanera"
            android:textColor="@color/public_button_blue_dark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            />
        <View
            android:id="@+id/line1"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/divder_h"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            android:background="@color/line"
            />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_40dp"
            android:text="@string/album"
            android:textColor="@color/public_button_blue_dark"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            />
        <View
            android:id="@+id/line2"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/divder_h"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv2"
            android:background="@color/line"
            />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_40dp"
            android:text="@string/cancle"
            android:textColor="@color/public_button_blue_dark"
            app:layout_constraintTop_toBottomOf="@id/line2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>